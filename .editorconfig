# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style=space

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
prose_wrap = always
max_line_length = 80
